<%= link_to 'New holiday', new_holiday_path, class: "btn btn-primary", id:"btn-primary" %>

<div class="panel panel-primary">
  <!-- Cabecera -->
  <div id="titulo" class="panel-heading">
    <h1><b><%= @title %></b></h1>
  </div>
  <table class="table">
    <thead>
        <tr>
          <th><%= "Title" %></th>
          <th><%= "Date" %></th>
          <th><%= "Reminder" %></th>
          <th><%= "Notifications" %></th>
          <th>Editar</th>
          <th>Eliminar</th>
        </tr>  
    </thead>
    <tbody>
      <% @holidays.each do |holiday| %>
        <% if holiday.notifications %>  
          <tr>
            <td><%= holiday.title %></td>
            <td><%= holiday.date %></td>
            <td><%= holiday.reminder %></td>
            <td id="table_button">
                <div class="icon-ok icon-large">
                  <% holiday.notifications %>
                </div>
            </td>
            <td id="table_button">
                <%= link_to '', edit_holiday_path(holiday), class:"icon-pencil icon-large" %>
            </td>
            <td id="table_button">
                <%= link_to '', holiday, class: "icon-remove-circle icon-large", method: :delete, data: { confirm: 'Â¿Eliminar?' } %>
            </td>
        <% else %>
              <td><%= holiday.title %></td>
              <td><%= holiday.date %></td>
              <td><%= holiday.reminder %></td>
              <td id="table_button">
                <div class="icon-remove icon-large">
                  <% holiday.notifications %>
                </div>
              </td>
              <td id="table_button">
                  <%= link_to '', edit_holiday_path(holiday), class:"icon-pencil icon-large" %>
              </td>
              <td id="table_button">
                  <%= link_to '', holiday, class: "icon-remove-circle icon-large", method: :delete, data: { confirm: 'Â¿Eliminar?' } %>
              </td>
        <% end %>  
          </tr>
      <% end %>
    </tbody>
  </table>
</div>

